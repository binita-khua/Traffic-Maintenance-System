<%- include('shared/header.ejs') -%> 

<% if (isLoggedIn){ %> 
    <%-include('admin/adminnav.ejs') -%> 
  <% } else { %> 
    <%- include('shared/nav.ejs') -%>
<% } %>
<h1>Report an Incident</h1>

<div class="container">
  <form name="myForm" method="post" action="/add" enctype="multipart/form-data">
    <span id="errors"
      ><% if(typeof errors !== 'undefined') { for(let error of errors) { %> <%=
      error.msg %> <% } } %></span
    >
    <BR /><br />
    <label>Name</label>
    <input
      id="name"
      placeholder="First Last"
      type="text"
      name="name"
    /><br /><br />
    <label>Phone</label>
    <input
      id="phone"
      placeholder="Phone"
      type="text"
      name="phone"
    /><br /><br />
    <label>Upload an Image</label>
    <input placeholder="0" type="file" name="myimage" /><br /><br />
    <div class="wrapper">
      <label>Description</label>
      <input type="text" id="description" name="description" />
    </div>
    <br /><br />
    <button type="submit">Submit</button>
  </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script src="js/tinymce/jquery.tinymce.min.js"></script>
<script src="js/tinymce/tinymce.min.js"></script>

<script>
  tinymce.init({
    selector: "#description",
    height: 500,
    menubar: false,
  });
</script>
